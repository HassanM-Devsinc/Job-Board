<div class="max-w-screen-xl mx-auto p-4">
  <h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Employer Details</h1>

  <% @users.each do |user| %>
    <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 dark:bg-gray-800 dark:border-gray-700 mb-4">
      <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
        <strong class="font-semibold">Employer Username:</strong> <%= user.username %>
      </p>
      <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
        <strong class="font-semibold">Employer Email:</strong> <%= user.email %>
      </p>
    </div>
  <% end %>
  <div class="mt-6">
    <%= link_to "Back", root_path, class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 text-lg font-medium" %>
    </div>
</div>