<h2>Register New Employer</h2>

<%= form_with(model: @user, url: members_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, autofocus: true, autocomplete: "username" %>
  </div> <br>
  
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, autocomplete: "email" %>
  </div>  <br>  
   
  <%= form.hidden_field :user_type, value: 'employer' %>
  
  <div class="actions">
    <%= form.submit "Create Employer" %>
  </div>
<% end %>